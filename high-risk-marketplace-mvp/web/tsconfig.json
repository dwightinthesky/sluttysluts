{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "DOM"],
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "outDir": "./js",
    "rootDir": "./ts",
    "removeComments": false,
    "sourceMap": false
  },
  "include": ["ts/*.ts"]
}
